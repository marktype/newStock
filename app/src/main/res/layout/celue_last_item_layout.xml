<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/write_color"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/wisdom_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:padding="@dimen/margin_1dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RadioButton
            android:id="@+id/celue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="@dimen/margin_4dp"
            android:layout_weight="1"
            android:text="调仓记录"
            android:gravity="center"
            android:checked="true"
            android:textColor="@drawable/text_selector"
            android:background="@drawable/title_bg_selecter"
            android:textSize="@dimen/margin_15dp"/>
        <RadioButton
            android:id="@+id/zuhe_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/margin_4dp"
            android:text="当前持仓"
            android:layout_weight="1"
            android:textColor="@drawable/text_selector"
            android:background="@drawable/title_bg_selecter"
            android:textSize="@dimen/margin_15dp" />
        <RadioButton
            android:id="@+id/my_celue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:padding="@dimen/margin_4dp"
            android:text="跟投人"
            android:gravity="center"
            android:textColor="@drawable/text_selector"
            android:background="@drawable/title_bg_selecter"
            android:textSize="@dimen/margin_15dp" />
        <RadioButton
            android:id="@+id/my_zuhe_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/margin_4dp"
            android:text="交流区"
            android:layout_weight="1"
            android:textColor="@drawable/text_selector"
            android:background="@drawable/title_bg_selecter"
            android:textSize="@dimen/margin_15dp" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_below="@id/wisdom_group"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="组合正在招募"
            />
    </FrameLayout>
</RelativeLayout>
