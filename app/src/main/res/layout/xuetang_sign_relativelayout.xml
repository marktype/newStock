<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_xuetang_sign"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/xuetangbg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_xuetang_sign"
            android:layout_width="@dimen/margin_60dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_40dp"
            android:background="@color/xuetang_sign_btn_bg"
            android:text="签到"
            android:textColor="@color/text_two"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_xuetang_sign_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_xuetang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="本月已签到天数"
            android:textColor="@color/text_two"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_xuetang_sign_days_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_marginBottom="4dp"
            android:id="@+id/relative_xuetang_sign_days_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_xuetang_sign_days_total"
            android:layout_alignTop="@+id/relative_wancheng"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:text="累计天数"
                android:textColor="@color/text_two"
                android:textSize="@dimen/my_txt_size" />
        </RelativeLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_xuetang_sign_days_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_xuetang_sign_days_total"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:text="累计天数"
            android:textColor="@color/text_two"
            android:textSize="@dimen/my_txt_size" />

        <TextView
            android:id="@+id/tv_xuetang_line_right"
            android:layout_width="@dimen/margin_1dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_toRightOf="@+id/tv_xuetang_sign_days_total_text"
            android:background="@color/text_two"
            android:text="" />

        <TextView
            android:id="@+id/tv_xuetang_line_left"
            android:layout_width="@dimen/margin_1dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_toLeftOf="@+id/tv_xuetang_sign_days_total_text"
            android:background="@color/text_two"
            android:text="" />

        <RelativeLayout

            android:layout_marginBottom="4dp"
            android:id="@+id/relative_wancheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_xuetang_subject"
            android:layout_toLeftOf="@+id/tv_xuetang_line_left"

            >

            <TextView
                android:id="@+id/tv_xuetang_subject_complete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成课程数"
                android:textColor="@color/text_two"
                android:textSize="@dimen/my_txt_size" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_xuetang_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_xuetang_line_left"
            android:text="0"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/relative_xuetang_sign_days_total_text"
            android:layout_toRightOf="@+id/tv_xuetang_line_right">

            <TextView
                android:id="@+id/tv_xuetang_integral_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="@color/text_two"
                android:textSize="@dimen/my_txt_size" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_xuetang_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tv_xuetang_line_right"
            android:text="0"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />


    </RelativeLayout>
</LinearLayout>