<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_10dp"
    android:background="@color/write_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/hand_img"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        app:civ_border_width="@dimen/margin_1dp"
        app:civ_border_color="@color/write_color"/>
    <TextView
        android:id="@+id/name_txt"
        android:layout_toRightOf="@id/hand_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsfjksdj"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/margin_10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrowright"/>
</RelativeLayout>
