<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dioacang_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:text="买入"
        android:layout_centerVertical="true"
        android:background="@drawable/rect_edit_bg_shape"
        android:paddingBottom="@dimen/margin_3dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/diaocang_name"
        android:text="大秦铁路"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/line_diaocang"
        android:layout_toRightOf="@id/dioacang_image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/diaocang_num"
        android:text="SH601006"
        android:layout_below="@id/diaocang_name"
        android:layout_toRightOf="@id/dioacang_image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/price_num"
        android:text="0"
        android:layout_below="@id/line_diaocang"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@id/diaocang_name"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/price_start"
        android:text="参考成交价6.33"
        android:layout_below="@id/diaocang_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content" />
</RelativeLayout>
