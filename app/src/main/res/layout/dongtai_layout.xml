<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/content_con_bg"
    android:layout_height="match_parent">

    <com.example.drawer.stockapp.customview.view.XListView
        android:layout_marginTop="80dp"
        android:id="@+id/fondtai_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:divider="@android:color/transparent"
        />
    <ImageView
        android:id="@+id/img_no_login"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/dynamic_no_login"/>
    <ImageView
        android:id="@+id/loading_failed_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@mipmap/loading_failed"/>
</RelativeLayout>
