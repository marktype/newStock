<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/circle_con_bg"
    >

    <RelativeLayout
        android:id="@+id/send_dynamic_title"
        android:layout_width="match_parent"
        android:background="@color/write_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrowlift"
            android:padding="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/send_dynamic_txt"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_text_size"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/send_dynamic_title"
        android:background="@color/write_color"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_height="350dp">
        <EditText
            android:id="@+id/edit_txt"
            android:hint="发布下你的言论..."
            android:textColorHint="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:textCursorDrawable="@null"
            android:gravity="top"
            android:textSize="@dimen/title_text_size"
            android:padding="@dimen/margin_10dp"
            android:background="@color/write_color"
            android:layout_height="250dp" />
        <LinearLayout
            android:id="@+id/publish_mood_add_picture_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:padding="2dp"
            android:src="@mipmap/add_img"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/send_dynamic_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_20dp"
        android:gravity="center"
        android:background="@color/content_bg"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/background_dark"
        android:text="@string/send_dynamic_sure_txt"/>
</RelativeLayout>
