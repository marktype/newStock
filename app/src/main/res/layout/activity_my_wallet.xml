<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_con_bg"
    >

    <RelativeLayout
        android:id="@+id/my_wallet_title"
        android:layout_width="match_parent"
        android:background="@color/write_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrowlift"
            android:padding="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/my_wallet_txt"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_text_size"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yu_e_lin"
        android:layout_width="match_parent"
        android:layout_below="@id/my_wallet_title"
        android:layout_marginTop="@dimen/margin_5dp"
        android:visibility="gone"
        android:background="@color/write_color"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/yue_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yuer"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/yu_e_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="263.86"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/content_text_size"
            android:layout_marginTop="@dimen/margin_10dp"
            android:textColor="@android:color/background_dark"
            android:layout_below="@id/yue_img"/>
        <TextView
            android:layout_below="@id/yu_e_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/maoliang_lin"
        android:layout_width="match_parent"
        android:layout_below="@id/yu_e_lin"
        android:layout_marginTop="@dimen/margin_5dp"
        android:background="@color/write_color"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/maoliang_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/maoliang"
            android:layout_marginTop="@dimen/margin_40dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/maoliang_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="379"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/content_text_size"
            android:layout_marginTop="@dimen/margin_10dp"
            android:textColor="@android:color/background_dark"
            android:layout_below="@id/maoliang_img"/>
        <!--<TextView-->
            <!--android:layout_below="@id/maoliang_num_txt"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="1猫粮 = 10元钱"-->
            <!--android:layout_marginTop="@dimen/margin_5dp"-->
            <!--android:layout_centerHorizontal="true"/>-->

    </RelativeLayout>
</RelativeLayout>
