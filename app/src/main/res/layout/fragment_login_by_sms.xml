<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.drawer.stockapp.fragment.LoginBySmsFragment">

    <EditText
        android:id="@+id/user_name_txt"
        android:layout_below="@id/login_title"
        android:hint="手机号"
        android:inputType="phone"
        android:textSize="@dimen/title_text_size"
        android:textCursorDrawable="@null"
        android:textColorHint="@android:color/darker_gray"
        android:background="@mipmap/phonr_list"
        android:paddingLeft="@dimen/margin_20dp"
        android:paddingRight="@dimen/margin_20dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/password_relat"
        android:layout_below="@id/user_name_txt"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:background="@mipmap/phonr_list"
        android:textCursorDrawable="@null"
        android:paddingLeft="@dimen/margin_20dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password_txt"
            android:background="@null"
            android:hint="短信验证码"
            android:inputType="textPassword"
            android:digits="1234567890"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/eye_img"
            android:textColorHint="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/get_verify"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:textSize="@dimen/my_txt_size"
            android:background="@drawable/rect_circle_gray_shape"
            android:gravity="center"
            android:padding="@dimen/margin_5dp"
            android:text="获取验证码" />
    </RelativeLayout>
    <TextView
        android:id="@+id/login_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_relat"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_25dp"
        android:background="@drawable/rect_blue_shape"
        android:gravity="center"
        android:padding="@dimen/margin_15dp"
        android:text="@string/login_txt"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/yijiandenglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_txt"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/margin_15dp"
        android:text="- 一键登录 -"
        android:textColor="#818181"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/login_by_password_weixin"
        android:layout_below="@+id/yijiandenglu"
        android:layout_width="wrap_content"
        android:background="@mipmap/icon_weixin"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />


</RelativeLayout>
