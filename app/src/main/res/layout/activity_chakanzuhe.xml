<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/rl_web_title">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/iv_back_two"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_chakan_zuhe_name"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_anniu"
            android:src="@mipmap/cancel"
            android:text="按钮"/>
    </RelativeLayout>

    <Button
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:text="组合设置"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1bb7e1"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/btn_shezhi"
        />
    <Button
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:text="一键下单"
        android:layout_alignParentBottom="true"
        android:background="#1bb7e1"
        android:textColor="#ffffff"
        android:layout_marginBottom="6dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/button2" />

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/sv_web"-->
        <!--android:layout_below="@+id/rl_web_title"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_above="@+id/btn_shezhi">-->
        <RelativeLayout
            android:layout_above="@+id/btn_shezhi"
            android:layout_below="@+id/rl_web_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/web_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_5dp"
                android:orientation="vertical">
                <WebView
                    android:id="@+id/web_view_chakanzuhe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
    <!--</ScrollView>-->



</RelativeLayout>
